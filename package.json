{
  "name": "@technologiesitftung/giessdenkiez-de-user-management-api",
  "private": true,
  "version": "0.1.0",
  "description": "vercel/now + auth0 management api for giessdenkiez.de To be able to manage user data.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage",
    "build:local": "tsc -p .",
    "start": "nodemon",
    "lint-staged": "lint-staged"
  },
  "author": "Fabian Mor√≥n Zirfas",
  "contributors": [],
  "license": "MIT",
  "devDependencies": {
    "@inpyjamas/scripts": "0.1.12-alpha",
    "@types/jest": "27.5.2",
    "@types/jsonwebtoken": "8.5.8",
    "@types/micro": "7.3.7",
    "@types/micro-cors": "0.1.2",
    "@types/node": "14.18.23",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.20.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.7.0",
    "jest": "27.5.1",
    "mock-jwks": "0.3.5",
    "nock": "13.2.9",
    "nodemon": "2.0.19",
    "prettier": "2.7.1",
    "ts-jest": "27.1.5",
    "typescript": "4.7.4",
    "vercel": "24.2.5"
  },
  "dependencies": {
    "@vercel/node": "1.14.1",
    "got": "11.8.3",
    "jwks-rsa": "1.12.3",
    "micro": "9.3.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules/**/node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "./node_modules/.bin/tsc -p . && node -r dotenv/config --inspect dist/index.js",
    "ext": "ts,json",
    "restartable": "rs",
    "verbose": true,
    "env": {
      "NODE_ENV": "development",
      "NODE_DOCKER_ENV": "0"
    }
  },
  "prettier": {
    "printWidth": 80
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "**/*.+(js|jsx|json|yml|yaml|css|scss|ts|tsx|md)": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t && npm run lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/technologiestiftung/giessdenkiez-de-user-management-api.git"
  },
  "bugs": {
    "url": "https://github.com/technologiestiftung/giessdenkiez-de-user-management-api/issues"
  },
  "homepage": "https://github.com/technologiestiftung/giessdenkiez-de-user-management-api#readme",
  "keywords": [
    "giessdenkiez.de",
    "technologiestiftung"
  ]
}
