{
  "name": "@tsb/tsb-trees-api-user-management",
  "private": true,
  "version": "0.1.0",
  "description": "vercel/now + auth0 management api for giessdenkiez.de To be able to manage user data.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage",
    "build:local": "tsc -p .",
    "start": "nodemon",
    "lint-staged": "lint-staged"
  },
  "author": "Fabian Mor√≥n Zirfas",
  "contributors": [],
  "license": "MIT",
  "devDependencies": {
    "@inpyjamas/scripts": "0.1.0-alpha",
    "@now/node": "1.8.5",
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "@types/jsonwebtoken": "8.5.6",
    "@types/micro": "7.3.6",
    "@types/micro-cors": "0.1.2",
    "@types/node": "13.13.51",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-jest": "24.7.0",
    "jest": "26.6.3",
    "mock-jwks": "0.3.5",
    "nock": "13.2.1",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "ts-jest": "26.5.6",
    "typescript": "4.5.4",
    "vercel": "22.0.1"
  },
  "dependencies": {
    "@vercel/node": "1.12.1",
    "cors": "2.8.5",
    "dotenv": "13.0.1",
    "express": "4.17.1",
    "express-jwt": "6.1.0",
    "got": "11.8.2",
    "jwks-rsa": "1.12.3",
    "micro": "9.3.4",
    "micro-cors": "0.1.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules/**/node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "./node_modules/.bin/tsc -p . && node -r dotenv/config --inspect dist/index.js",
    "ext": "ts,json",
    "restartable": "rs",
    "verbose": true,
    "env": {
      "NODE_ENV": "development",
      "NODE_DOCKER_ENV": "0"
    }
  },
  "prettier": {
    "printWidth": 80
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "**/*.+(js|jsx|json|yml|yaml|css|scss|ts|tsx|md)": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t && npm run lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/technologiestiftung/tsb-trees-api-user-management.git"
  },
  "bugs": {
    "url": "https://github.com/technologiestiftung/tsb-trees-api-user-management/issues"
  },
  "homepage": "https://github.com/technologiestiftung/tsb-trees-api-user-management#readme"
}
