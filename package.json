{
  "name": "@tsb/tsb-trees-api-user-management",
  "private": true,
  "version": "0.1.0",
  "description": "vercel/now + auth0 management api for giessdenkiez.de To be able to manage user data.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build:local": "tsc -p .",
    "start": "nodemon",
    "lint-staged": "lint-staged"
  },
  "author": "Fabian Mor√≥n Zirfas",
  "contributors": [],
  "license": "MIT",
  "devDependencies": {
    "@now/node": "1.6.1",
    "@types/express": "4.17.6",
    "@types/jest": "25.2.3",
    "@types/jsonwebtoken": "8.5.0",
    "@types/micro": "7.3.3",
    "@types/micro-cors": "0.1.1",
    "@types/node": "13.13.11",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "23.13.2",
    "jest": "26.0.1",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "ts-jest": "25.5.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-jwt": "5.3.3",
    "got": "11.3.0",
    "jwks-rsa": "1.8.0",
    "micro": "9.3.4",
    "micro-cors": "0.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jest-environment-node",
    "testPathIgnorePatterns": [
      "node_modules/",
      "<rootDir>/dist"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules/**/node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "./node_modules/.bin/tsc -p . && node -r dotenv/config --inspect dist/index.js",
    "ext": "ts,json",
    "restartable": "rs",
    "verbose": true,
    "env": {
      "NODE_ENV": "development",
      "NODE_DOCKER_ENV": "0"
    }
  },
  "prettier": {
    "printWidth": 80
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "packageRules": [
      {
        "updateTypes": [
          "minor",
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true
      }
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "dist",
      "coverage"
    ],
    "env": {
      "jest/globals": true
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:jest/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "args": "after-used",
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "**/*.+(js|jsx|json|yml|yaml|css|scss|ts|tsx|md)": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t && npm run lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/technologiestiftung/tsb-trees-api-user-management.git"
  },
  "bugs": {
    "url": "https://github.com/technologiestiftung/tsb-trees-api-user-management/issues"
  },
  "homepage": "https://github.com/technologiestiftung/tsb-trees-api-user-management#readme"
}
